<center>
<ul>
<% @posts.each do |post| %>
  <li><%= post.name %></li> 
  <li><%= post.contents %></li> 
  <li><%= post.record.title %></li> 
  <li><%= image_tag post.image %></li>


  
  
  </p>
  <%= link_to "Add Comment", new_comment_path(post_id: post.id) %>
  <br>
  Comments:
    <% post.comments.each do |comment| %>
      <%= link_to comment.user.username, user_path(comment.user) %> said
      <%= comment.message %>
    <% end %>
    

    <% end %>

    </ul>
</center>

