
  <h3>Filter posts:</h3>
  <%= form_tag("/posts", method: "get") do %>
    <%= select_tag "genre", options_from_collection_for_select(Genre.all, "id", "name"), include_blank: true %>
    <%= submit_tag "Filter" %>
    
  <% end %>



<% @posts.each do |post| %>


 <strong> <h3><%= post.name %></h3> </strong>
  
   <%= post.contents %> <br>

    <% post.comments.each do |comment| %>
     COMMENT: <strong><%= comment.message %></strong> <br>
      <br>
      <em style="font-size:14px; color:black">
      posted by: <%= comment.user.username %>
    <% end %>
    <%= link_to "Add Comment", new_comment_path(post_id: post.id) %>
    POST:<h2><%= post.name %></h2>
   
  
   
    <% if !post.record.nil? %> 
   ALBUM:<p><%= post.record.title %></p>
    <% end %>
    <% if post.image.attached? %>
      <li><%= image_tag post.image %></li>
      ARTIST:<p><%= post.artist.name %></p>
   GENRE:<p><%= post.genres %></p>
      <div><%= post.contents %></div>
    <% end %>
<% end %>



  


  
