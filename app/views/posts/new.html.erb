
<center>
<h1>Make A New Post</h1>
<%= form_for(@post) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
        <%= f.label :contents %>
        <%= f.text_field :contents %><br>
        <%= f.hidden_field :user_id %>
       
        <%= f.fields_for  @post.build_record do |record_attributes| %>
        <%= record_attributes.label :title %>
        <%= record_attributes.text_field :title %><br>
        <%= f.fields_for :genre do |g| %>
                <%= g.label :genre %>
                <%= g.collection_select :genre, Genre.all, :name, :name %><br>
                <% end %>

        <% end %>
        <%= f.label :image %>
        <%= f.file_field :image %><br>
        <%= f.submit %>
        <% end %>
</center>
        
