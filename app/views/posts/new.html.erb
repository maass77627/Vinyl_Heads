<center>
<h1>Make A New Post</h1>
<%= form_for(@post) do |f| %>
        <%= f.label :post_name %>
        <%= f.text_field :name %><br>
        <%= f.label :contents %>
        <%= f.text_area :contents, size: "30x5" %><br>
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.label :genre_name %>
        <%= f.collection_select :genre_name, Genre.all, :name, :name %>
       
        <%= f.fields_for :record, @post.record do |record_attributes| %>
        <%= record_attributes.label :Record_Title %>
        <%= record_attributes.text_field :title %><br>
        <%= f.fields_for :artist, @post.artist do |artist_attributes| %>
          <%= artist_attributes.label :artist_name %>
          <%= artist_attributes.text_field :name %><br>
        
       <% end %>
        
        <% end %>
        <%= f.submit %>
        <% end %>
        </center>
   
