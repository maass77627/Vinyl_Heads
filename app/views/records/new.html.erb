<%= form_for(@record) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.collection_select :genre, Genre.all, :name, :name %>
    <%= f.hidden_field :post_id %>
    <%= f.label :name %>
    <%= f.hidden_field :name %>
    <%= f.label :contents %>
    <%= f.hidden_field :contents %>
    <%= f.submit %>
    <% end %>